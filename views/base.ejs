
<%-include('header')-%>

<div class="text-center center-div d-flex align-items-center justify-content-center" id="login">
    <div class="container w-25 rounded border py-5 bg-muted">
        <div class="title pb-5">
            <h2 class="font-weight-bold text-white">Login System</h2>
            <span class="text-white">Log in for the existing user</span>
        </div>
        <form action="/login" method="POST">    
        
            <div class="form-group">
                <small class="form-text text-white text-left">Register email address</small>
                <input type="email" class="form-control" required placeholder="Email" name="email">
            </div>
            <div class="form-group">
                <small class="form-text text-white text-left">Please enter your valid password</small>
                <input type="password" class="form-control" required placeholder="Password" name="password">
            </div>
            <button type="submit" class="btn-btn-success rounded pi ">Login</button>
        </form>
    </div>
</div>

<%-include('footer')-%>
